<div id="upload-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Upload Excel Sheet file:</h2>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div id="upload-model-error" class="alert alert-danger"></div>
                                    <div class="form-group">
                                        <label class="control-label">File</label>
                                        <div class="input-group input-file">
                                            <input id="file-input" type="file" name="file" class="form-control" placeholder='Choose a file...' />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input id="btnSubmit" onclick="upload()" type="button" value="Upload" class="btn btn-success float-md-right" />
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>