@model PagedResult<DenominationViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>All Denominations</h2>
                    <a asp-action="Create" asp-route-serviceId="@TempData["serviceId"]" class="pull-right btn btn-outline-primary">Add</a>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Value</th>
                                <th>Inquirable</th>
                                <th>ClassType</th>
                                <th>PaymentMode</th>
                                <th>Bill PaymentMode</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var deno in Model.Results)
                            {
                                <tr>
                                    <td>@deno.Name</td>
                                    <td>@deno.Value</td>
                                    <td>@deno.Inquirable</td>
                                    <td>@deno.ClassType</td>
                                    <td>@deno.PaymentModeName</td>
                                    <td>@deno.BillPaymentModeName</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@deno.Id" class="btn btn-info">Edit</a>
                                        <a asp-action="ChangeStatus" asp-route-id="@deno.Id" asp-route-serviceId="@TempData["serviceId"]" class="btn @(deno.Status ? "btn-danger" : "btn-success")">
                                            @(deno.Status ? "Deactive" : "Active")
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <pager link-url="/SuperAdmin/Denominations/Index"
                           page="Model.CurrentPage"
                           page-size="Model.PageSize"
                           total-items="Model.PageCount">
                    </pager>
                </div>
            </div>
        </div>
    </div>
</div>
