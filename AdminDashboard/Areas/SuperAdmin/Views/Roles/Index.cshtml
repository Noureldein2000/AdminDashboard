@model IEnumerable<AdminDashboard.Models.SwaggerModels.IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

@*<partial name="_RoleForm" model="new RoleFormViewModel()" />*@

<table class="table table-striped mt-4">
    <thead>
        <tr >
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="ManagePermissions" asp-route-roleId="@role.Id">Manage Permissions</a>
                </td>
            </tr>
        }

    </tbody>
</table>
@section Scripts {
    <partial _name="_ValidationScriptsPartial" />
    <script>

    </script>
}
