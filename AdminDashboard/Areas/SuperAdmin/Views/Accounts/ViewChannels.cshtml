@model IEnumerable<AccountChannelViewModel>
@using AdminDashboard.Models.SwaggerModels

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>Account Channels</h2>
                    <button type="button" class="pull-right btn btn-outline-primary" data-toggle="modal" data-target="#myModal">Create</button>
                    <partial name="_CreateAccountChannel.cshtml" />
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Channel Name</th>
                                <th>Serial</th>
                                <th>Status</th>
                                <th>Created By</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var channel in Model)
                            {
                                <tr>
                                    <td>@channel.ChannelName</td>
                                    <td>@channel.Serial</td>
                                    <td>@channel.Status</td>
                                    <td>@channel.CreatedName</td>
                                    <td>
                                        @*<a asp-action="DeleteAccountChannel" asp-route-id="@channel.Id" class="btn btn-danger">Delete</a>*@
                                        @*<a asp-action="ChangeAccountChannel" asp-route-id="@channel.Id" class="btn @(channel.Status ? "btn-danger": "btn-success")">
                                                @(channel.Status ? "Deactive" : "Active")
                                            </a>*@
                                        @*@{var exceptedLst = new SelectListItem()
                                            {
                                                Text = channel.Status.ToString(),
                                                Value = ((int)channel.Status).ToString()
                                            };
                                        }*@
                                        <select id="drpStatus" asp-items="Html.GetEnumSelectList<AccountChannelStatus>().Where(t=>!((int)channel.Status).ToString().Contains(t.Value))" class="form-control" data-style="select-with-transition" title="Choose an AccountType" data-size="7"
                                                onchange="document.location.href = '../ChangeAccountChannel?id=' +@channel.Id+'&status='+this.options[this.selectedIndex].value;">
                                            @*onchange="changeStatus('@channel.Id')">*@
                                            <option>Choose an AccountType</option>
                                        </select>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @*<div class="card-footer text-center">
                        <pager link-url="/SuperAdmin/Accounts/Index"
                               page="Model.CurrentPage"
                               page-size="Model.PageSize"
                               total-items="Model.PageCount">
                        </pager>
                    </div>*@
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $('#btnSearch').on("click", function () {
            console.log('entred action');
            debugger;
            var searchKey = $("#txtSearchKey").val();
            var accountId = document.URL.substring(document.URL.lastIndexOf('/') + 1);
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetChannels")",
                data: { serial: searchKey },
                dataType: "text",
                success: function (msg) {
                    console.log('success');

                    var x = $('#tblChannels tbody').empty();
                    $.each(JSON.parse(msg), function (i, data) {
                        $('#tblChannels').append('<tr><td>' + data.serial + '</td><td>' + data.channelTypeName + '</td><td>' + data.channelOwnerName + '</td><td>' + data.paymentMethodName + '</td><td>' + data.createdBy + '</td><td> <a href="@Url.Action("CreateAccountChannel", "Accounts")?accountId=' + accountId + '&channelId=' + data.id + '" class="btn btn-info">Assign</a></td></tr>');
                    });
                },
                error: function (req, status, error) {
                    console.log(msg);
                }
            });
        });

        function changeStatus(id) {

            var ddlFruits = $("[id*=drpStatus]");
            var selectedText = ddlFruits.find("option:selected").text();
            var selectedValue = ddlFruits.val();

            $.ajax({
                type: "GET",
                url: "@Url.Action("ChangeAccountChannel")",
                data: {
                    id:id,
                     status: selectedValue
                },
                dataType: "text",
                success: function (msg) {
                    console.log(' change success');
                },
                error: function (req, status, error) {
                    console.log(msg);
                }
         });
        }

    </script>
}