@model IEnumerable<DenominationFeesViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>All Fees</h2>
                    <a asp-action="Create" asp-route-id="@Model.Select(x=>x.DenominationId).FirstOrDefault()" class="pull-right btn btn-outline-primary">Add</a>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Denomination</th>
                                <th>Value</th>
                                <th>Type Name</th>
                                <th>Payment Mode</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fee in Model)
                            {
                                <tr>
                                    <td>@fee.DenominationFullName</td>
                                    <td>@fee.FeesValue</td>
                                    <td>@fee.FeesTypeName</td>
                                    <td>@fee.PaymentMode</td>
                                    <td>
                                        <a asp-action="Delete" asp-controller="DenominationFees" asp-route-id="@fee.Id" asp-route-denominationId="@fee.DenominationId" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>

        $(function () {
            @*var msg = '@TempData["result"]';*@
            if (msg != "") {
                swal({
                    title: "Good job!",
                    text: "You Saved the User Successfully!",
                    icon: "success",
                    button: "Ok",
                });
            }
         });

    </script>
}

