@model LookupTypesViewModel

<div class="card-header">
    <button type="button" class="btn btn-outline-primary fa-pull-right" onclick="ResetInputs()" data-toggle="modal" data-target="#LookupTypeModel">
        Add
    </button>
</div>
<div class="card-body">
    <table class="table table-striped" id="tableType-@((int)Model.IdentifierType)">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Name Ar</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var deno in Model.GeneralLookups)
            {
                <tr id="tr-@deno.Id">
                    <td>@deno.Id</td>
                    <td>@deno.Name</td>
                    <td>@deno.NameAr</td>
                    <td>
                        <button onclick="OnViewDataModel(@deno.Id)" class="btn btn-info">
                            Edit
                        </button>
                        <button onclick="ConfirmDelete(@deno.Id, this)" class="btn btn-danger">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>

    </script>
}

